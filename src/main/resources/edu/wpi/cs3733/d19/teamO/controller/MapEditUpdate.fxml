<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="352.0" prefWidth="546.0" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="edu.wpi.cs3733.d19.teamO.controller.MapEditUpdateController">
    <children>
        <HBox layoutX="112.0" layoutY="92.0" spacing="15.0">
            <children>
                <VBox layoutX="120.0" layoutY="137.0" spacing="20.0">
                    <children>
                        <Label layoutX="82.0" layoutY="193.0" text="NodeID:">
                            <font>
                                <Font size="22.0"/>
                            </font>
                        </Label>
                        <Label layoutX="92.0" layoutY="203.0" text="x-coord:">
                            <font>
                                <Font size="22.0"/>
                            </font>
                        </Label>
                        <Label layoutX="102.0" layoutY="213.0" text="y-coord:">
                            <font>
                                <Font size="22.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox layoutX="227.0" layoutY="148.0" spacing="10.0">
                    <children>
                        <JFXTextField fx:id="updateNodeID" layoutX="277.0" layoutY="148.0" onKeyReleased="#validateButton">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="updateX" layoutX="227.0" layoutY="189.0" onKeyReleased="#validateButton">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="updateY" layoutX="227.0" layoutY="232.0"
                            onKeyReleased="#validateButton"><font>
                                <Font size="18.0"/>
                            </font>
                        </JFXTextField>
                    </children>
                </VBox>
            </children>
        </HBox>
        <JFXButton fx:id="updateButton" disable="true" layoutX="398.0" layoutY="298.0"
                   onAction="#updateNodeAction" text="Update">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXButton>
        <JFXButton fx:id="cancel" layoutX="460.0" layoutY="298.0" onAction="#cancelButtonAction"
                   text="Cancel">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXButton><Label fx:id="status" layoutX="216.0" layoutY="245.0" prefHeight="19.0" prefWidth="220.0"
               textFill="RED">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
