<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d19.teamO.ui_prototype.MainWindowController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label text="Team O Kiosk Application">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="32.0"/>
                    </font>
                </Label>
                <Label text="Please select from the following:">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Label>
                <Button fx:id="navigationButton" mnemonicParsing="false" onAction="#navigationButtonAction"
                        text="Navigation">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="mapToolButton" mnemonicParsing="false" onAction="#mapToolButtonAction" text="Map Tool">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="sanitationRequestButton" mnemonicParsing="false"
                        onAction="#sanitationRequestButtonAction" text="Sanitation Request">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="securityRequestButton" mnemonicParsing="false" onAction="#securityRequestButtonAction"
                        text="Security Request">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="schedulingButton" mnemonicParsing="false" onAction="#schedulingButtonButtonAction"
                        text="Scheduling">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets left="5.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
