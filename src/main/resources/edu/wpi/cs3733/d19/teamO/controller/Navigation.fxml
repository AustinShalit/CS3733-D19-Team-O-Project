<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import edu.wpi.cs3733.d19.teamO.component.FuzzyWuzzyComboBox?>
<?import edu.wpi.cs3733.d19.teamO.component.MapView?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d19.teamO.controller.NavigationController">
    <left>
        <StackPane style="-fx-background-color: rgba(1, 46, 90, 0.9);">
            <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="323.0" spacing="10.0">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="32.0"/>
                </padding>
                <children>

                    <HBox alignment="CENTER_RIGHT" spacing="16.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="From" fill="white"
                                  style="-fx-font-weight: BOLD;">
                                <font>
                                    <Font size="32.0"/>
                                </font>
                            </Text>
                            <FuzzyWuzzyComboBox fx:id="fromComboBox" id="navbox" editable="true"
                                                onAction="#onFromComboAction" maxHeight="100.0"
                                                prefHeight="50.0" prefWidth="264.0"/>
                        </children>
                        <VBox.margin>
                            <Insets right="20.0" bottom="12.0"/>
                        </VBox.margin>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="16.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="To" fill="white"
                                  style="-fx-font-weight: BOLD;">
                                <font>
                                    <Font size="32.0"/>
                                </font>
                            </Text>
                            <FuzzyWuzzyComboBox fx:id="toComboBox" id="navbox" editable="true"
                                                onAction="#onToComboAction" maxHeight="100.0"
                                                prefHeight="50.0" prefWidth="264.0"/>
                        </children>
                        <VBox.margin>
                            <Insets right="20.0" bottom="12.0"/>
                        </VBox.margin>
                    </HBox>

                    <JFXButton fx:id="goButton" id="gobtn" onAction="#onGoButtonAction"
                               prefWidth="294.0" text="GO" textFill="WHITE"
                               style="-fx-font-weight: BOLD;">
                        <VBox.margin>
                            <Insets bottom="16.0"/>
                        </VBox.margin>
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </JFXButton>

                    <Rectangle fill="#f6bd38" strokeWidth="0.0" width="150.0" height="2.0"/>

                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Quick Navigate" fill="white"
                          style="-fx-font-weight: BOLD">
                        <font>
                            <Font size="32.0"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="12.0"/>
                        </VBox.margin>
                    </Text>
                    <GridPane minHeight="91.0" prefWidth="323.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <JFXButton fx:id="restroomButton" id="navbtn"
                                       onAction="#nearestLocation" prefHeight="36.0"
                                       prefWidth="150.0" text="Restroom" textFill="WHITE"
                                       GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="20.0"/>
                                </GridPane.margin>
                            </JFXButton>
                            <JFXButton fx:id="elevatorButton" id="navbtn"
                                       onAction="#nearestLocation" prefHeight="36.0"
                                       prefWidth="150.0" text="Elevator" textFill="WHITE"
                                       GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                       GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="20.0"/>
                                </GridPane.margin>
                            </JFXButton>
                            <JFXButton fx:id="informationButton" id="navbtn"
                                       onAction="#nearestLocation" prefHeight="36.0"
                                       prefWidth="150.0" text="Information" textFill="WHITE"
                                       GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                       GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                            <JFXButton fx:id="emergencyButton" id="navbtn"
                                       onAction="#nearestLocation" prefHeight="36.0"
                                       prefWidth="150.0" text="Emergency" textFill="WHITE"
                                       GridPane.halignment="CENTER" GridPane.rowIndex="1"
                                       GridPane.valignment="CENTER"/>
                        </children>
                        <VBox.margin>
                            <Insets bottom="12.0"/>
                        </VBox.margin>
                    </GridPane>

                    <Rectangle fill="#f6bd38" strokeWidth="0.0" width="150.0" height="2.0"/>

                    <FlowPane fx:id="buttonPane" columnHalignment="CENTER" prefWrapLength="200.0">
                        <VBox.margin>
                            <Insets bottom="5.0" top="12.0"/>
                        </VBox.margin>
                    </FlowPane>
                    <ScrollPane fx:id="instructionPane" hbarPolicy="NEVER" prefHeight="300.0"
                                prefWidth="323.0">
                        <content>
                            <VBox fx:id="instructionsContainer">
                                <padding>
                                    <Insets top="8.0" bottom="8.0" right="8.0" left="12.0"/>
                                </padding>
                            </VBox>
                        </content>
                        <VBox.margin>
                            <Insets bottom="12.0"/>
                        </VBox.margin>
                    </ScrollPane>

                    <Rectangle fill="#f6bd38" strokeWidth="0.0" width="150.0" height="2.0"/>

                    <HBox prefWidth="323.0" alignment="CENTER" spacing="20.0">
                        <children>
                            <JFXButton fx:id="aboutButton" onAction="#aboutOnAction"
                                       prefHeight="48.0" minWidth="154.0" id="small-button"
                                       text="About Page" style="-jfx-button-type: RAISED;">
                                <font>
                                    <Font name="System Bold" size="18.0"/>
                                </font>
                            </JFXButton>
                            <JFXButton prefHeight="48.0" minWidth="150.0" text="Credit"
                                       id="small-button" style="-jfx-button-type: RAISED;"/>
                        </children>
                        <VBox.margin>
                            <Insets top="12.0"/>
                        </VBox.margin>
                    </HBox>
                </children>
            </VBox>
        </StackPane>
    </left>
    <center>
        <MapView fx:id="map"
                 style="-fx-background-color: WHITE; -fx-effect: dropshadow(three-pass-box, rgba(110, 110, 110, 0.25), 10, 0, 0, 0)">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </MapView>
    </center>
</BorderPane>
