<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d19.teamO.controller.PreloaderController">
    <center>
        <ImageView fitHeight="222.0" fitWidth="600.0" preserveRatio="true">
            <Image url="@style/bwh-logo.png"/>
        </ImageView>
    </center>
    <bottom>
        <VBox>
            <Label fx:id="versionLabel" alignment="CENTER" maxWidth="Infinity"
                   textAlignment="CENTER"/>
            <Label fx:id="stateLabel" alignment="CENTER" maxWidth="Infinity"
                   textAlignment="CENTER"/>
            <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0"/>
        </VBox>
    </bottom>
</BorderPane>
