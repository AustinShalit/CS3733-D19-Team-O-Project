<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="root" stylesheets="@../style/KioskStyle.css"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d19.teamO.controller.request.PrescriptionViewController">
    <center>
        <VBox id="requestview" maxWidth="-Infinity" styleClass="form" BorderPane.alignment="CENTER">
            <children>
                <Label id="heading" fx:id="titleLabel" text="View Prescription Requests">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                </Label>
                <TableView fx:id="requestsTableView" maxWidth="-Infinity" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="52.0" text="ID"/>
                        <TableColumn fx:id="timeRequestedCol" prefWidth="123.0"
                                     text="Time Requested"/>
                        <TableColumn fx:id="timeCompletedCol" prefWidth="119.0"
                                     text="Time Completed" visible="false"/>
                        <TableColumn fx:id="whoRequestedCol" minWidth="7.0" prefWidth="120.0"
                                     text="Who Requested"/>
                        <TableColumn fx:id="doctorNameCol" prefWidth="128.0" text="Doctor Name"/>
                        <TableColumn fx:id="patientNameCol" prefWidth="134.0" text="Patient Name"/>
                        <TableColumn fx:id="patientDOBCol" prefWidth="134.0" text="Patient DOB"/>
                        <TableColumn fx:id="medNameCol" prefWidth="150.0" text="Medication Name"/>
                        <TableColumn fx:id="medDoseCol" prefWidth="150.0" text="Medication Dosage"/>
                        <TableColumn fx:id="medDescCol" prefWidth="230.0"
                                     text="Medication Description"/>
                    </columns>
                </TableView>
                <GridPane id="requestbuttons">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <JFXButton id="table-button" fx:id="deleteEntryButton"
                                   onAction="#onDeleteEntryButtonAction" text="Complete Request"
                                   GridPane.columnIndex="2" GridPane.halignment="CENTER"
                                   GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
                        <JFXButton id="table-button" onAction="#onAddButtonAction"
                                   text="New Request" GridPane.halignment="CENTER"
                                   GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
                        <JFXButton id="table-button" fx:id="assignButton"
                                   onAction="#onAssignButtonAction" text="Assign Employee"
                                   GridPane.columnIndex="1" GridPane.rowSpan="2"/>
                    </children>
                </GridPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="160.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
