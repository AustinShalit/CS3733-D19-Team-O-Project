<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="-Infinity" minWidth="-Infinity" styleClass="root"
            stylesheets="@../style/KioskStyle.css" xmlns="http://javafx.com/javafx/8.0.171"
